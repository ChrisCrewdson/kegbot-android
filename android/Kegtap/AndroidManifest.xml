<?xml version="1.0" encoding="utf-8"?>
<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  package="org.kegbot.kegtap"
  android:versionCode="1"
  android:versionName="1.0">

  <uses-sdk
    android:targetSdkVersion="12"
    android:minSdkVersion="12"/>

  <uses-permission
    android:name="android.permission.INTERNET"></uses-permission>

  <application
    android:icon="@drawable/icon"
    android:logo="@drawable/kegbot_logo"
    android:label="@string/app_name"
    android:theme="@android:style/Theme.Holo"
    android:hardwareAccelerated="true">
    
    <!-- ########## -->
    <!-- ACTIVITIES -->
    <!-- ########## -->

    <!-- KegtapActivity -->
    <activity
      android:name=".KegtapActivity"
      android:launchMode="singleTop"
      android:label="@string/app_name">
      <intent-filter>
        <action
          android:name="android.intent.action.MAIN" />
        <category
          android:name="android.intent.category.DEFAULT" />
        <category
          android:name="android.intent.category.LAUNCHER" />
        <action
          android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
        <action
          android:name="android.hardware.usb.action.USB_DEVICE_DETACHED" />
      </intent-filter>
     <meta-data android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
         android:resource="@xml/device_filter" />
    </activity>

    <activity
      android:name=".PourInProgressActivity"
      android:launchMode="singleTop"
      android:label="@string/app_name">
    </activity>

    <!-- SettingsActivity -->
    <activity
      android:name=".SettingsActivity"
      android:label="@string/settings_name" />
      
    <!-- ######## -->
    <!-- SERVICES -->
    <!-- ######## -->

    <!-- KegbotCoreService -->
    <service
      android:name=".service.KegbotCoreService" />

    <!-- KegbotApiService -->
    <service
      android:name=".service.KegbotApiService" />

    <!-- KegbotHardwareService -->
    <service
      android:name=".service.KegbotHardwareService" />

    <!-- KegboardService -->
    <service
      android:name=".service.KegboardService">
    </service>

  </application>

</manifest> 
